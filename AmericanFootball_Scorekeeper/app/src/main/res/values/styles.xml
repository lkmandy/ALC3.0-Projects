<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorPrimary">#009688</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">#E0F2F1</item>
    </style>

    <!-- Title views -->
    <style name="AmericanFootballTeamTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- score views -->
    <style name="AmericanFootballScoreViews">
        <item name="android:textColor">#616161</item>
        <item name="android:textSize">56sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- image views -->
    <style name="AmericanFootballImageViews">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">center</item>
    </style>

    <!-- buttons -->
    <style name="AmericanFootballButtons">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- get result button -->
    <style name="AmericanFootballGetResult">
        <item name="android:textColor">#004D40</item>
        <item name="android:textSize">10sp</item>
        <item name="android:color">#616161</item>
    </style>

    <!-- win message  -->
    <style name="AmericanFootballWinMessage">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_weight">2</item>
    </style>

    <!-- reset  -->
    <style name="AmericanFootballReset">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#B71C1C</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <!--Linear layout; team columns-->
    <style name="AmericanFootballLinearLayoutColumns">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--Common Parent layout pattern-->
    <style name="AmericanFootballCommonParentLayoutPattern">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Win button-->
    <style name="AmericanFootballWinButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

</resources>